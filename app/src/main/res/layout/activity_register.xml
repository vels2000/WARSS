<?xml version="1.0" encoding="UTF-8"?>
    <ScrollView tools:context=".register"
    android:fillViewport="true"
    android:background="@drawable/watermark"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:orientation="vertical">
    <TextView android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:fontFamily="monospace"
        android:typeface="monospace"
        android:textStyle="bold"
        android:textSize="36sp"
        android:textColor="@android:color/holo_red_dark"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:text="Farmer's Entry"
        android:gravity="center"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:id="@+id/textView3"/>

    <EditText android:background="@drawable/blackborder" android:layout_height="56dp" android:layout_width="match_parent" android:padding="10dp" android:textColor="#000000" android:layout_margin="10dp" android:id="@+id/name" android:inputType="textPersonName" android:hint=" First Name" android:ems="20" android:drawablePadding="5dp" android:drawableLeft="@drawable/name"/>

    <EditText android:background="@drawable/blackborder" android:layout_height="56dp" android:layout_width="match_parent" android:padding="10dp" android:textColor="#000000" android:layout_margin="10dp" android:id="@+id/lname" android:inputType="textPersonName" android:hint=" Last Name" android:ems="20" android:drawableLeft="@drawable/name"/>

    <EditText android:background="@drawable/blackborder" android:layout_height="56dp" android:layout_width="match_parent" android:padding="10dp" android:textColor="#180101" android:layout_margin="10dp" android:id="@+id/adnum" android:inputType="number" android:hint=" Aadhar Number" android:ems="12" android:drawableLeft="@drawable/aadhar"/>

    <EditText android:background="@drawable/blackborder" android:layout_height="56dp" android:layout_width="match_parent" android:padding="10dp" android:layout_margin="10dp" android:id="@+id/deob" android:hint=" DOB" android:ems="10" android:drawableLeft="@drawable/dob" android:clickable="true"/>

    <EditText android:background="@drawable/blackborder" android:layout_height="56dp" android:layout_width="match_parent" android:padding="10dp" android:textColor="#180101" android:layout_margin="10dp" android:id="@+id/mobileno" android:inputType="number" android:hint=" Mobile Number" android:ems="10" android:drawableLeft="@drawable/ic_baseline_local_phone_24"/>

    <EditText android:background="@drawable/blackborder" android:layout_height="56dp" android:layout_width="match_parent" android:padding="10dp" android:textColor="#000000" android:layout_margin="10dp" android:id="@+id/houseno" android:inputType="textLongMessage" android:hint=" House No,Building Name" android:ems="10" android:drawableLeft="@drawable/home"/>

    <EditText android:background="@drawable/blackborder" android:layout_height="56dp" android:layout_width="match_parent" android:padding="10dp" android:textColor="#000000" android:layout_margin="10dp" android:id="@+id/road" android:inputType="textLongMessage" android:hint=" Road Name,Area,Colony" android:ems="10" android:drawableLeft="@drawable/road"/>

    <EditText android:background="@drawable/blackborder" android:layout_height="56dp" android:layout_width="match_parent" android:padding="10dp" android:textColor="#000000" android:layout_margin="10dp" android:id="@+id/landmark" android:inputType="textLongMessage" android:hint=" Landmark" android:ems="10" android:drawableLeft="@drawable/land"/>

    <EditText android:background="@drawable/blackborder" android:layout_height="56dp" android:layout_width="match_parent" android:padding="10dp" android:layout_margin="10dp" android:id="@+id/pincode" android:inputType="phone" android:hint=" Pincode" android:ems="10" android:drawableLeft="@drawable/road"/>

    <Spinner android:background="@drawable/blackborder" android:layout_height="56dp" android:layout_width="346dp" android:padding="10dp" android:layout_margin="10dp" android:id="@+id/spinner"/>

    <Spinner android:background="@drawable/blackborder" android:layout_height="56dp" android:layout_width="346dp" android:padding="10dp" android:layout_margin="10dp" android:id="@+id/spinner1"/>

    <Spinner android:background="@drawable/blackborder" android:layout_height="56dp" android:layout_width="346dp" android:padding="10dp" android:layout_margin="10dp" android:id="@+id/spinner2"/>


    -<TableRow android:layout_height="wrap_content" android:layout_width="match_parent">

    <EditText android:background="@drawable/blackborder" android:layout_height="65dp" android:layout_width="match_parent" android:padding="10dp" android:layout_margin="10dp" android:id="@+id/cowt" android:inputType="number" android:hint=" Cow" android:ems="10" android:drawableLeft="@drawable/cow" app:srcCompat="@drawable/cow"/>

</TableRow>


    -<TableRow android:layout_height="wrap_content" android:layout_width="match_parent">

    <EditText android:background="@drawable/blackborder" android:layout_height="65dp" android:layout_width="match_parent" android:padding="10dp" android:layout_margin="10dp" android:id="@+id/buff" android:inputType="number" android:hint=" Bufflo" android:ems="10" android:drawableLeft="@drawable/bu" app:srcCompat="@drawable/bu"/>

</TableRow>


    -<TableRow android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/bufflot">

    <EditText android:background="@drawable/blackborder" android:layout_height="65dp" android:layout_width="match_parent" android:padding="10dp" android:layout_margin="10dp" android:id="@+id/goat" android:inputType="number" android:hint=" Goat" android:ems="10" android:drawableLeft="@drawable/goat" app:srcCompat="@drawable/goat"/>

</TableRow>


    -<TableRow android:layout_height="wrap_content" android:layout_width="match_parent">

    <EditText android:background="@drawable/blackborder" android:layout_height="65dp" android:layout_width="match_parent" android:padding="10dp" android:layout_margin="10dp" android:id="@+id/sheep" android:inputType="number" android:hint=" Sheep" android:ems="10" android:drawableLeft="@drawable/sheep" app:srcCompat="@drawable/goat"/>

</TableRow>


    -<TableRow android:layout_height="wrap_content" android:layout_width="match_parent">

    <EditText android:background="@drawable/blackborder" android:layout_height="65dp" android:layout_width="match_parent" android:padding="10dp" android:layout_margin="10dp" android:id="@+id/horse" android:inputType="number" android:hint=" Horse" android:ems="10" android:drawableLeft="@drawable/hourse" app:srcCompat="@drawable/goat"/>

</TableRow>


    <Button android:background="#F384ED09" android:layout_height="50dp" android:layout_width="300dp" android:textStyle="bold" android:textSize="30sp" android:textColor="@color/colorPrimaryDark" android:textAllCaps="true" android:text="Submit" android:gravity="center" android:layout_margin="15dp" android:layout_gravity="center" android:id="@+id/button3" android:onClick="reg1"/>

    <Button android:background="@color/red" android:layout_height="50dp" android:layout_width="300dp" android:textStyle="bold" android:textSize="30sp" android:textColor="@color/ic_launcher_background" android:textAllCaps="true" android:text="Cancel" android:gravity="center" android:layout_margin="15dp" android:layout_gravity="center" android:id="@+id/button7" android:onClick="cancel"/>

</LinearLayout>

</ScrollView>